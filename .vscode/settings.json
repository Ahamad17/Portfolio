{
  "window.zoomLevel": 0,
  "explorer.sortOrder": "type",
  // Editor
  "editor.autoIndent": "full",
  "editor.codeActionsOnSave": {
    // "source.organizeImports": true
  },
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorStyle": "line",
  "editor.fontSize": 15,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": false,
  "editor.letterSpacing": 0.2,
  "editor.lineHeight": 25,
  "editor.minimap.enabled": true,
  "editor.renderWhitespace": "none",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  // Terminal
  "terminal.integrated.fontFamily": "MesloLGS NF, 'SourceCodePro+Powerline+Awesome Regular', Source Code Pro for Powerline, monospace, Meslo LG M for Powerline",
  // "terminal.integrated.fontSize": 16,
  "terminal.integrated.rendererType": "experimentalWebgl",
  // Workbench
  "workbench.editor.highlightModifiedTabs": true,
  // File settings
  "files.autoSave": "off",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    }
  },
  // "files.hotExit": "onExit",
  "files.defaultLanguage": "typescript",
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "renovate.json5": "jsonc",
    "tslint.json": "jsonc"
  },
  // Peacock Settings
  // "peacock.color": "#f9e64f",
  // Prettier settings
  "prettier.singleQuote": true,
  "prettier.printWidth": 100,
  "workbench.colorCustomizations": {
    "activityBar.background": "#12342c",
    "titleBar.activeBackground": "#050e0c",
    "titleBar.activeForeground": "#e7e7e7",
    "activityBar.activeBackground": "#12342c",
    "activityBar.activeBorder": "#8c39a6",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#8c39a6",
    "activityBarBadge.foreground": "#e7e7e7",
    "statusBar.background": "#050e0c",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#12342c",
    "titleBar.inactiveBackground": "#050e0c99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  // "editor.formatOnSaveMode": "modifications",
  "editor.minimap.size": "fit",
  "peacock.color": "#050e0c",
}
